<% doc_presenter = document_presenter(document) %>
<% fields = presenter.new(fields: doc_presenter.fields_to_render).terms %>

<% if fields.count > 0 %>
  <h4 class="blacklight-<%= title %>"><%= title %></h4>
  <dl class="row dl-invert document-metadata">
    <% fields.each do |field_name, field, _| %>
      <dt class="blacklight-<%= field_name.parameterize %> col-md-4">
        <%= render_document_show_field_label document, field: field_name %>
      </dt>
      <dd class="blacklight-<%= field_name.parameterize %> col-md-8<%= " truncate" if blacklight_config.truncate_field_values.include? field_name %>">
        <%= doc_presenter.field_value field %>
      </dd>
    <% end %>
  </dl>
<% end %>
